generator client {
  provider     = "prisma-client"
  output       = "../prisma/generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  phone         String?        @unique
  passwordHash  String
  role          Role           @default(CUSTOMER)
  name          String
  avatarUrl     String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  provider      Provider?
  bookings      Booking[]      @relation("customerBookings")
  reviews       Review[]       @relation("authorReviews")
  refreshTokens RefreshToken[]
}

model Provider {
  id             String         @id @default(cuid())
  userId         String         @unique
  user           User           @relation(fields: [userId], references: [id])
  bio            String?
  categories     Category[]     @relation("ProviderCategories")
  services       Service[]
  availabilities Availability[]
  isVerified     Boolean        @default(false)
  documentUrl    String?
  location       Json? // {lat, lng, city, district, address}
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  earnings       Float          @default(0)
  bookings       Booking[]      @relation("providerBookings")
}

model Category {
  id        String     @id @default(cuid())
  name      String     @unique
  slug      String     @unique
  providers Provider[] @relation("ProviderCategories")
  services  Service[]
}

model Service {
  id          String    @id @default(cuid())
  providerId  String
  provider    Provider  @relation(fields: [providerId], references: [id])
  title       String
  description String?
  price       Float
  currency    String    @default("NPR")
  durationMin Int // estimated minutes
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
  categories  Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
}

model Availability {
  id         String   @id @default(cuid())
  providerId String
  provider   Provider @relation(fields: [providerId], references: [id])
  dayOfWeek  Int // 0-6 (Sun-Sat)
  startTime  String // "09:00"
  endTime    String // "17:00"
  createdAt  DateTime @default(now())
}

model Booking {
  id          String        @id @default(cuid())
  customerId  String
  customer    User          @relation("customerBookings", fields: [customerId], references: [id])
  providerId  String
  provider    Provider      @relation("providerBookings", fields: [providerId], references: [id])
  serviceId   String
  service     Service       @relation(fields: [serviceId], references: [id])
  scheduledAt DateTime
  durationMin Int
  price       Float
  currency    String
  status      BookingStatus @default(PENDING)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  review      Review?
  payment     Payment?
}

model Review {
  id        String   @id @default(cuid())
  bookingId String   @unique
  booking   Booking  @relation(fields: [bookingId], references: [id])
  authorId  String
  author    User     @relation("authorReviews", fields: [authorId], references: [id])
  rating    Int // 1-5
  comment   String?
  createdAt DateTime @default(now())
}

model Payment {
  id             String        @id @default(cuid())
  bookingId      String        @unique
  booking        Booking       @relation(fields: [bookingId], references: [id])
  providerAmount Float
  platformAmount Float
  gateway        String
  status         PaymentStatus
  transactionRef String?
  createdAt      DateTime      @default(now())
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
}

enum Role {
  CUSTOMER
  PROVIDER
  ADMIN
}

enum BookingStatus {
  PENDING
  ACCEPTED
  REJECTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}
